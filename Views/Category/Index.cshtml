@model IEnumerable<FinancialApp.Models.TransactionCategory>
@{
    ViewData["Title"] = "Categories";
}

@section Styles {
    <style>
        :root {
            --primary: #4361ee;
            --primary-hover: #3a56d4;
            --danger: #ef476f;
            --danger-hover: #d23d60;
            --edit: #06d6a0;
            --edit-hover: #05c48f;
            --bg-light: #f8f9fa;
            --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --transition-speed: 0.3s;
        }

        .categories-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
            padding: 2rem;
            margin-top: 2rem;
            position: relative;
            overflow: hidden;
        }

        .categories-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .categories-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: #333;
            margin: 0;
            position: relative;
        }

            .categories-title::after {
                content: '';
                position: absolute;
                bottom: -8px;
                left: 0;
                width: 60px;
                height: 3px;
                background: var(--primary);
                border-radius: 2px;
            }

        .btn-add {
            background-color: var(--primary);
            color: white;
            border: none;
            padding: 0.6rem 1.2rem;
            border-radius: 8px;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all var(--transition-speed) ease;
            box-shadow: 0 2px 5px rgba(67, 97, 238, 0.3);
        }

            .btn-add:hover {
                background-color: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(67, 97, 238, 0.4);
            }

            .btn-add i {
                font-size: 0.9rem;
            }

        .category-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 12px;
            margin-top: 1rem;
        }

            .category-table thead th {
                color: #6c757d;
                font-weight: 500;
                font-size: 0.95rem;
                padding: 0.75rem 1rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                border: none;
            }

            .category-table tbody tr {
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
                border-radius: 8px;
                transition: all var(--transition-speed) ease;
                background-color: white;
            }

                .category-table tbody tr:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                }

            .category-table tbody td {
                padding: 1rem;
                vertical-align: middle;
                border: none;
                position: relative;
            }

            .category-table tbody tr td:first-child {
                border-top-left-radius: 8px;
                border-bottom-left-radius: 8px;
                font-weight: 500;
                color: #333;
            }

            .category-table tbody tr td:last-child {
                border-top-right-radius: 8px;
                border-bottom-right-radius: 8px;
            }

        .category-date {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .category-actions {
            display: flex;
            gap: 10px;
        }

        .btn-action {
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1rem;
            font-size: 0.85rem;
            font-weight: 500;
            transition: all var(--transition-speed) ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        .btn-edit {
            background-color: rgba(6, 214, 160, 0.1);
            color: var(--edit);
        }

            .btn-edit:hover {
                background-color: var(--edit);
                color: white;
                transform: translateY(-2px);
            }

        .btn-delete {
            background-color: rgba(239, 71, 111, 0.1);
            color: var(--danger);
        }

            .btn-delete:hover {
                background-color: var(--danger);
                color: white;
                transform: translateY(-2px);
            }

        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: #6c757d;
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: 1rem;
                color: #d1d5db;
            }

            .empty-state p {
                font-size: 1.1rem;
                margin-bottom: 1.5rem;
            }

        /* Animation classes */
        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .categories-header

        {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .category-table {
            border-spacing: 0;
        }

            .category-table thead {
                display: none;
            }

            .category-table tbody tr {
                display: block;
                margin-bottom: 1rem;
                border-radius: 8px;
                padding: 0.5rem;
            }

            .category-table tbody td {
                display: block;
                text-align: right;
                padding: 0.5rem 1rem;
                position: relative;
            }

                .category-table tbody td:before {
                    content: attr(data-label);
                    float: left;
                    font-weight: 500;
                    color: #6c757d;
                }

        .category-actions {
            justify-content: flex-end;
        }

        }
    </style>
}

<div class="container fade-in">
    <div class="categories-container">
        <div class="categories-header">
            <h1 class="categories-title">Transaction Categories</h1>
            <a asp-action="Create" class="btn-add">
                <i class="fas fa-plus"></i> Add New Category
            </a>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="category-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cat in Model)
                        {
                            <tr>
                                <td data-label="Name">@cat.Name</td>
                                <td data-label="Created At" class="category-date">@cat.CreatedAt.ToShortDateString()</td>
                                <td data-label="Actions">
                                    <div class="category-actions">
                                        <a asp-action="Edit" asp-route-id="@cat.Id" class="btn-action btn-edit">
                                            <i class="fas fa-pencil-alt"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@cat.Id" class="btn-action btn-delete">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-folder-open"></i>
                <p>No categories found. Create your first category to get started.</p>
                <a asp-action="Create" class="btn-add">
                    <i class="fas fa-plus"></i> Add New Category
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add staggered animation to table rows
            const tableRows = document.querySelectorAll('.category-table tbody tr');
            tableRows.forEach((row, index) => {
                row.style.opacity = '0';
                row.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    row.style.transition = 'all 0.3s ease';
                    row.style.opacity = '1';
                    row.style.transform = 'translateY(0)';
                }, 100 + (index * 50));
            });
        });
    </script>
}