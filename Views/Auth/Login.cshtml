@model FinancialApp.Models.ViewModels.Auth.LoginViewModel
@{
    Layout = null; // Disables loading the _Layout.cshtml
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Financial App</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* Reset and base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            min-height: 100vh;
            background-color: #f8f9fa;
            color: #333;
        }

        .login-container {
            display: flex;
            min-height: 100vh;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
        }

        .s0 {
            fill: none;
            stroke: #3182ce;
            stroke-width: 2
        }

        .s1 {
            fill: #3182ce
        }

        /* Image column */
        .image-column {
            flex: 1;
            background-color: #f0f4ff;
            position: relative;
            overflow: hidden;
            display: none; /* Hidden on mobile by default */
        }

        .image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(24, 59, 86, 0.7), rgba(73, 95, 189, 0.4));
            z-index: 1;
        }

        .bg-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

        .image-content {
            position: absolute;
            bottom: 40px;
            left: 40px;
            z-index: 2;
            color: white;
        }

            .image-content h2 {
                font-size: 32px;
                font-weight: 700;
                margin-bottom: 15px;
                text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
            }

            .image-content p {
                font-size: 16px;
                max-width: 400px;
                line-height: 1.6;
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
            }

        /* Form column */
        .form-column {
            flex: 1;
            padding: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ffffff;
        }

        .form-wrapper {
            width: 100%;
            max-width: 380px;
        }

        .logo-container {
            margin-bottom: 30px;
            text-align: center;
        }

        .logo {
            height: 40px;
            margin-bottom: 10px;
        }

        .heading {
            font-size: 24px;
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 30px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 24px;
            position: relative;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-size: 14px;
            font-weight: 500;
            color: #4a5568;
        }

        .form-input {
            width: 100%;
            padding: 12px 16px;
            font-size: 15px;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            background-color: #f8fafc;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #3182ce;
            box-shadow: 0 0 0 3px rgba(49, 130, 206, 0.2);
            background-color: #fff;
        }

        .input-icon {
            position: absolute;
            right: 16px;
            top: 44px;
            color: #a0aec0;
        }

        .fa-user {
            align-items: center;
            padding: 0 8px;
            display: flex;
            position: absolute;
            right: 5px;
            top: 44px;
            color: #a0aec0;
            cursor: pointer;
            transform: translateY(-25%);
            transition: all 0.2s ease;
        }

        .password-toggle {
            align-items: center;
            padding: 0 8px;
            display: flex;
            position: absolute;
            right: 5px;
            top: 44px;
            color: #a0aec0;
            cursor: pointer;
            transform: translateY(-25%);
            transition: all 0.2s ease;
        }

        .password-toggle:hover {
            color: #4a5568;
        }

        .checkbox-container {
            display: flex;
            align-items: center;
            margin-bottom: 24px;
        }

            .checkbox-container input {
                margin-right: 8px;
            }

        .checkbox-label {
            font-size: 14px;
            color: #4a5568;
        }

        .submit-btn {
            width: 100%;
            padding: 14px;
            background: linear-gradient(45deg, #3182ce, #4299e1);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(49, 130, 206, 0.2);
        }

            .submit-btn:hover {
                background: linear-gradient(45deg, #2c5282, #3182ce);
                transform: translateY(-2px);
                box-shadow: 0 7px 14px rgba(49, 130, 206, 0.25);
            }

            .submit-btn:active {
                transform: translateY(0);
                box-shadow: 0 4px 6px rgba(49, 130, 206, 0.2);
            }

        .additional-links {
            margin-top: 24px;
            text-align: center;
            font-size: 14px;
            color: #718096;
        }

            .additional-links a {
                color: #3182ce;
                text-decoration: none;
                transition: all 0.2s ease;
            }

                .additional-links a:hover {
                    color: #2c5282;
                    text-decoration: underline;
                }

        .validation-summary-errors {
            color: #e53e3e;
            background-color: #fff5f5;
            border: 1px solid #fc8181;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 24px;
        }

            .validation-summary-errors ul {
                list-style-type: none;
                padding-left: 0;
            }

            .validation-summary-errors li {
                margin-bottom: 6px;
            }

        /* Responsive adjustments */
        @@media (min-width: 768px) {
            .image-column

        {
            display: block;
        }

        }

        /* Animation effects */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .form-wrapper {
            animation: fadeIn 0.6s ease-out;
        }

        .form-group {
            animation: fadeIn 0.6s ease-out;
            animation-fill-mode: both;
        }

            .form-group:nth-child(1) {
                animation-delay: 0.1s;
            }

            .form-group:nth-child(2) {
                animation-delay: 0.2s;
            }

            .form-group:nth-child(3) {
                animation-delay: 0.3s;
            }
    </style>
</head>
