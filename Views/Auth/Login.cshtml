        <!-- Image Column -->
        <div class="image-column">
            <img src="https://i.pinimg.com/736x/23/05/d6/2305d6ca64c853e04a2f34f0c9ba378b.jpg" alt="Financial Dashboard" class="bg-image">
            <div class="image-overlay"></div>
            <div class="image-content">
                <h2>Financial Management Made Simple</h2>
                <p>Take control of your finances with our powerful and intuitive financial management platform.</p>
            </div>
        </div>

        <!-- Form Column -->
        <div class="form-column">
            <div class="form-wrapper">
