@model FinancialApp.Models.Account
@{
    ViewData["Title"] = "Delete Account";
}

<div class="delete-account-container">
    <div class="delete-card">
        <div class="delete-header">
            <div class="warning-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                    <line x1="12" y1="9" x2="12" y2="13"></line>
                    <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
            </div>
            <h2>Delete Account</h2>
        </div>

        <div class="account-info">
            <div class="account-name">
                <span class="label">Account Name</span>
                <span class="value">@Model.AccountName</span>
            </div>
            <div class="account-type">
                <span class="label">Account Type</span>
                <span class="value">@Model.AccountType</span>
            </div>
            <div class="account-balance">
                <span class="label">Balance</span>
                <span class="value">@Model.Balance.ToString("C")</span>
            </div>
        </div>

        <div class="confirmation-text">
            <p>Are you sure you want to delete this account? This action cannot be undone.</p>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="actions">
                <button type="submit" class="btn btn-delete">
                    <span class="btn-content">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            <line x1="10" y1="11" x2="10" y2="17"></line>
                            <line x1="14" y1="11" x2="14" y2="17"></line>
                        </svg>
                        Delete Account
                    </span>
                </button>
                <a asp-action="Index" class="btn btn-cancel">
                    <span class="btn-content">Cancel</span>
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    /* Modern Delete Account View Styling */
    .delete-account-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
        padding: 2rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .delete-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        width: 100%;
        max-width: 560px;
        overflow: hidden;
        transition: all 0.3s ease;
        transform: translateY(0);
        padding: 2.5rem;
        position: relative;
    }

        .delete-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
        }

    .delete-header {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
        color: #e63946;
    }

    .warning-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 48px;
        height: 48px;
        background-color: rgba(230, 57, 70, 0.1);
        border-radius: 50%;
        margin-right: 1rem;
    }

        .warning-icon svg {
            width: 24px;
            height: 24px;
            stroke: #e63946;
        }

    .delete-header h2 {
        margin: 0;
        font-size: 1.75rem;
        font-weight: 600;
        color: #333;
    }

    .account-info {
        background-color: #f8f9fa;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .account-balance {
        grid-column: 1 / -1;
        border-top: 1px solid rgba(0, 0, 0, 0.08);
        padding-top: 1rem;
        margin-top: 0.5rem;
    }

    .account-info .label {
        display: block;
        font-size: 0.875rem;
        color: #6c757d;
        margin-bottom: 0.375rem;
    }

    .account-info .value {
        display: block;
        font-size: 1.125rem;
        font-weight: 600;
        color: #343a40;
    }

    .account-balance .value {
        font-size: 1.5rem;
        color: #212529;
    }

    .confirmation-text {
        margin-bottom: 2rem;
        color: #495057;
        font-size: 1rem;
        line-height: 1.5;
    }

    .actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        flex: 1;
        padding: 0;
        border: none;
        background: none;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 8px;
        cursor: pointer;
        overflow: hidden;
        position: relative;
        height: 48px;
        transition: all 0.3s ease;
    }

        .btn .btn-content {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            padding: 0 1.5rem;
            transition: transform 0.3s ease;
        }

        .btn svg {
            width: 18px;
            height: 18px;
            margin-right: 0.5rem;
        }

    .btn-delete {
        background-color: #e63946;
        color: white;
    }

        .btn-delete::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to right, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.2) 50%, rgba(255,255,255,0.1) 100%);
            transform: translateX(-100%);
            transition: transform 0.6s ease;
        }

        .btn-delete:hover::before {
            transform: translateX(100%);
        }

        .btn-delete:hover {
            background-color: #d62839;
            box-shadow: 0 4px 12px rgba(230, 57, 70, 0.3);
        }

    .btn-cancel {
        background-color: #f1f3f5;
        color: #495057;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-cancel:hover {
            background-color: #e9ecef;
            color: #212529;
        }

    /* Animation for button hover */
    .btn:hover .btn-content {
        transform: translateY(-2px);
    }

    .btn:active .btn-content {
        transform: translateY(1px);
    }

    /* Responsive adjustments */
    @@media (max-width: 640px) {
        .delete-account-container

    {
        padding: 1rem;
    }

    .delete-card {
        padding: 1.5rem;
    }

    .account-info {
        grid-template-columns: 1fr;
    }

    .actions {
        flex-direction: column;
    }

    .btn {
        width: 100%;
    }

    }
</style>



































