            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .dashboard-title {
            font-size: 2rem;
            font-weight: 600;
            color: #2c3e50;
            margin: 0;
            position: relative;
        }

            .dashboard-title::after {
                content: '';
                position: absolute;
                bottom: -8px;
                left: 0;
                width: 60px;
                height: 4px;
                background: linear-gradient(90deg, #3498db, #2ecc71);
                border-radius: 2px;
            }

        /* Create Button */
        .create-button {
            display: flex;
            align-items: center;
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            padding: 0.7rem 1.2rem;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 500;
            box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
            transition: all 0.3s ease;
        }

            .create-button:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(52, 152, 219, 0.4);
                color: white;
                text-decoration: none;
            }

            .create-button i {
                margin-right: 8px;
                font-size: 1.1rem;
            }

        /* Summary Cards */
        .accounts-summary {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .summary-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: all 0.3s ease;
        }

            .summary-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            }

        .summary-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-size: 1.3rem;
            color: white;
        }

        .total-balance .summary-icon {
            background: linear-gradient(135deg, #3498db, #2980b9);
        }

        .account-count .summary-icon {
            background: linear-gradient(135deg, #2ecc71, #27ae60);
        }

        .summary-data h3 {
            font-size: 0.9rem;
            margin: 0 0 0.5rem;
            color: #7f8c8d;
            font-weight: 500;
        }

        .summary-data .amount {
            font-size: 1.8rem;
            color: #2c3e50;
            font-weight: 600;
            margin: 0;
        }

        /* Empty State */
        .empty-state {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            text-align: center;
        }

        .empty-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(52, 152, 219, 0.1);
            color: #3498db;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        .empty-state h2 {
            margin: 0 0 0.5rem;
            color: #2c3e50;
        }

        .empty-state p {
            color: #7f8c8d;
            margin-bottom: 1.5rem;
        }

        .empty-action-button {
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            padding: 0.8rem 2rem;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 500;
            box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
            transition: all 0.3s ease;
        }

            .empty-action-button:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(52, 152, 219, 0.4);
                color: white;
                text-decoration: none;
            }

        /* Account Cards Grid */
        .accounts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 1.5rem;
        }

        /* Account Card */
        .account-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: all 0.3s ease;
            position: relative;
        }

            .account-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.1);
            }

            .account-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 6px;
                background: #3498db;
                transition: all 0.3s ease;
            }

            .account-card.checking::before {
                background: linear-gradient(90deg, #3498db, #2980b9);
            }

            .account-card.savings::before {
                background: linear-gradient(90deg, #2ecc71, #27ae60);
            }

            .account-card.credit::before {
                background: linear-gradient(90deg, #e74c3c, #c0392b);
            }

            .account-card.investment::before {
                background: linear-gradient(90deg, #f39c12, #e67e22);
            }

        /* Card Header */
        .card-header {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .account-name {
            margin: 0;
            font-size: 1.3rem;
            color: #2c3e50;
            font-weight: 600;
        }

        .account-type {
            font-size: 0.8rem;
            font-weight: 500;
            color: white;
            background: #7f8c8d;
            padding: 0.3rem 0.8rem;
            border-radius: 50px;
        }

        .account-card.checking .account-type {
            background: #3498db;
        }

        .account-card.savings .account-type {
            background: #2ecc71;
        }

        .account-card.credit .account-type {
            background: #e74c3c;
        }

        .account-card.investment .account-type {
            background: #f39c12;
        }

        /* Card Body */
        .card-body {
            padding: 1.5rem;
        }

        .balance-section {
            margin-bottom: 1.2rem;
        }

        .balance-label {
            display: block;
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-bottom: 0.5rem;
        }

        .balance-amount {
            display: block;
            font-size: 1.8rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .date-section {
            display: flex;
            align-items: center;
            color: #95a5a6;
            font-size: 0.9rem;
        }

            .date-section i {
                margin-right: 0.5rem;
            }

        /* Card Actions */
        .card-actions {
            border-top: 1px solid rgba(0,0,0,0.05);
            display: flex;
            justify-content: space-between;
        }

        .card-action {
            flex: 1;
            text-align: center;
            padding: 1rem 0;
            text-decoration: none;
            color: #7f8c8d;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .card-action i {
                margin-bottom: 0.3rem;
                font-size: 1.1rem;
            }

            .card-action:not(:last-child) {
                border-right: 1px solid rgba(0,0,0,0.05);
            }

            .card-action.details-action:hover {
                background-color: rgba(52, 152, 219, 0.1);
                color: #3498db;
                text-decoration: none;
            }

            .card-action.edit-action:hover {
                background-color: rgba(46, 204, 113, 0.1);
                color: #2ecc71;
                text-decoration: none;
            }

            .card-action.delete-action:hover {
                background-color: rgba(231, 76, 60, 0.1);
                color: #e74c3c;
                text-decoration: none;
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .accounts-grid

        {
            grid-template-columns: 1fr;
        }

        .card-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .account-type {
            margin-top: 0.5rem;
        }

        .dashboard-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .create-button {
            margin-top: 1rem;
        }

        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add animation class to each card with delay
            const cards = document.querySelectorAll('.account-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100 * index);
            });

            // Add ripple effect to buttons
            const buttons = document.querySelectorAll('.create-button, .empty-action-button');
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    const x = e.clientX - e.target.getBoundingClientRect().left;
                    const y = e.clientY - e.target.getBoundingClientRect().top;

                    const ripple = document.createElement('span');
                    ripple.classList.add('ripple');
                    ripple.style.left = `${x}px`;
                    ripple.style.top = `${y}px`;

                    this.appendChild(ripple);

                    setTimeout(() => {
                        ripple.remove();
                    }, 600);
                });
            });
        });
    </script>
    <style>
        /* Initial state for animations */
        .account-card {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        /* Ripple effect */
        .create-button, .empty-action-button {
            position: relative;
            overflow: hidden;
        }

        .ripple {
            position: absolute;
            background: rgba(255, 255, 255, 0.4);
            border-radius: 50%;
            transform: scale(0);
            animation: ripple 0.6s linear;
            pointer-events: none;
            width: 100px;
            height: 100px;
            margin-left: -50px;
            margin-top: -50px;
        }

        @@keyframes ripple {
            to

        {
            transform: scale(4);
            opacity: 0;
        }

        }
    </style>
}


































